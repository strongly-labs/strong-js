{
  "name": "@strong-js/form",
  "version": "0.0.0",
  "description": "New strong-js package",
  "main": "dist/index.js",
  "scripts": {
    "type-check": "tsc --noEmit --project ./tsconfig.build.json",
    "type-check:watch": "yarn type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly --project ./tsconfig.build.json",
    "build:js": "rollup -c",
    "build:watch": "rollup -w -c",
    "build": "yarn build:types && yarn build:js",
    "prepublish": "yarn build"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "dependencies": {
    "@strong-js/common": "*",
    "evergreen-ui": "^6.3.0",
    "react-hook-form": "^7.11.1",
    "tslib": "^2.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2"
  }
}
