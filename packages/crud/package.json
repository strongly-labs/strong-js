{
  "name": "@strong-js/crud",
  "author": "Strongly Labs",
  "description": "Strong-js crud UI",
  "version": "0.1.5",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/strongly-labs/strong-js.git",
    "directory": "packages/crud"
  },
  "scripts": {
    "type-check": "tsc --noEmit --project ./tsconfig.build.json",
    "type-check:watch": "yarn type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly --project ./tsconfig.build.json",
    "build:js": "rollup -c",
    "build:watch": "rollup -w -c",
    "build": "yarn build:types && yarn build:js",
    "prepublish": "yarn workspace @strong-js/form build && yarn workspace @strong-js/form-adapter-evergreen build && yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"committing\""
    }
  },
  "size-limit": [
    {
      "path": "dist/crud.cjs.min.js",
      "limit": "300 KB"
    },
    {
      "path": "dist/crud.esm.js",
      "limit": "150 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/preset-react": "7.14.5",
    "@size-limit/preset-small-lib": "5.0.2",
    "@storybook/addon-essentials": "6.3.7",
    "@storybook/addon-info": "5.3.21",
    "@storybook/addon-links": "6.3.7",
    "@storybook/addons": "6.3.7",
    "@storybook/react": "6.3.7",
    "@types/babel__core": "7.1.15",
    "@types/react": "17.0.16",
    "@types/react-dom": "17.0.9",
    "@types/react-is": "17.0.2",
    "@types/react-table": "7.7.2",
    "@types/react-timeago": "4.1.3",
    "@types/storybook__addon-info": "5.2.4",
    "babel-loader": "8.2.2",
    "husky": "7.0.1",
    "react-is": "17.0.2",
    "size-limit": "5.0.2",
    "tslib": "2.3.0"
  },
  "dependencies": {
    "@strong-js/common": "*",
    "@strong-js/form": "*",
    "@strong-js/form-adapter-evergreen": "*",
    "match-sorter": "^6.3.0",
    "evergreen-ui": "^6.3.0",
    "react-hook-form": "^7.11.1",
    "react-table": "^7.7.0",
    "react-timeago": "^6.2.1",
    "swr": "^0.5.6"
  }
}
