{
  "name": "strong-js",
  "license": "MIT",
  "author": "Strongly Labs",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/mobile/*",
      "apps/web/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-*"
    ]
  },
  "prisma": {
    "schema": "./backend/schema.prisma"
  },
  "scripts": {
    "lerna": "lerna --scope=$(./scripts/get-glob.js ./packages)",
    "lerna-apps": "lerna --scope=$(./scripts/get-glob.js ./apps/web)",
    "watch:types": "yarn lerna run type-check:watch --stream --parallel",
    "watch:builds": "yarn lerna run build:watch --stream --parallel",
    "test": "yarn lerna run test --",
    "lint": "yarn lerna run lint -- --fix",
    "build": "yarn lerna run build",
    "prepublish": "yarn lerna run prepublish",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary",
    "data:kill": "sudo kill -9 $(sudo lsof -t -i:5432)",
    "data:up": "docker-compose -f ./backend/docker-compose.yml up --detach",
    "data:down": "docker-compose -f ./backend/docker-compose.yml down",
    "data:push": "npx prisma db push",
    "data:gen": "npx prisma generate",
    "up": "yarn data:up && yarn data:push",
    "apps:dev": "yarn lerna-apps run dev --stream --parallel",
    "studio": "npx prisma studio",
    "postinstall": "yarn workspace @strong-js/generate build && yarn workspace @strong-js/cli build && lerna link && yarn data:gen"
  },
  "dependencies": {
    "@types/node": "^16.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "@strong-js/generate": "^0.1.1",
    "typegraphql-prisma": "^0.14.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/helper-module-imports": "^7.14.5",
    "@babel/parser": "^7.14.9",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/traverse": "^7.14.9",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "babel-plugin-polyfill-regenerator": "^0.2.2",
    "lerna": "^4.0.0",
    "prettier-plugin-prisma": "^0.12.1",
    "prettier-plugin-sh": "^0.7.1",
    "rollup": "^2.55.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.5",
    "typesync": "^0.8.0",
    "@types/rimraf": "^3.0.1",
    "rimraf": "^3.0.2"
  }
}
