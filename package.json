{
  "name": "strong-js",
  "license": "MIT",
  "author": "Strong-js Labs",
  "private": true,
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "lerna": "^4.0.0",
    "prettier-plugin-prisma": "^0.12.1",
    "prettier-plugin-sh": "^0.7.1",
    "tsdx": "^0.14.1",
    "typescript": "^4.3.5",
    "typesync": "^0.8.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/mobile/*",
      "apps/web/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-*"
    ]
  },
  "scripts": {
    "lerna": "lerna --scope={$(lerna list --all --parseable --toposort --long | grep -E -- /packages/ | sed -E 's/[^:]+:([^:]+).+/\\1/' | paste -d , -s -)}",
    "lerna-apps": "lerna --scope={$(lerna list --all --parseable --toposort --long | grep -E -- /apps/ | sed -E 's/[^:]+:([^:]+).+/\\1/' | paste -d , -s -)}",
    "watch": "yarn lerna run start --stream --parallel",
    "test": "yarn lerna run test --",
    "lint": "yarn lerna run lint -- --fix",
    "build": "yarn lerna run build",
    "prepublish": "yarn lerna run prepublish",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary",
    "data:up": "yarn workspace @strong-js/data up --detach",
    "data:push": "yarn workspace @strong-js/data push",
    "data:gen": "yarn workspace @strong-js/data gen",
    "web:link": "yarn workspace @strong-js/app-main st link",
    "admin:link": "yarn workspace @strong-js/app-admin st link admin",
    "up": "yarn data:up && yarn data:push",
    "apps:dev": "yarn lerna-apps run dev --stream --parallel",
    "studio": "npx prisma studio --schema backend/schema.prisma",
    "postinstall": "yarn workspace @strong-js/generate build && yarn workspace @strong-js/data build && yarn data:gen && npx strong link"
  },
  "dependencies": {
    "@types/node": "^16.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "@strong-js/data": "*"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.28.5",
    "**/@typescript-eslint/parser": "^4.28.5",
    "**/jest": "^26.6.3",
    "**/ts-jest": "^26.4.4",
    "**/typescript": "^4.3.5"
  }
}
