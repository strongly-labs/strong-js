{
  "name": "mono",
  "private": true,
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "lerna": "^4.0.0",
    "prettier-plugin-prisma": "^0.12.1",
    "prettier-plugin-sh": "^0.7.1",
    "tsdx": "^0.14.1",
    "typescript": "^4.3.5",
    "typesync": "^0.8.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/mobile/*",
      "apps/web/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-*"
    ]
  },
  "scripts": {
    "lerna": "lerna --ignore=@strongly/app-*",
    "start": "yarn lerna run start --stream --parallel",
    "test": "yarn lerna run test --",
    "lint": "yarn lerna run lint -- --fix",
    "build": "yarn lerna run build",
    "prepublish": "yarn lerna run prepublish",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary"
  },
  "dependencies": {
    "@types/node": "^16.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
