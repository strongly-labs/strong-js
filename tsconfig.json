{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types", "scripts"],
  "compilerOptions": {
    "allowJs": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@strongly/generate": ["packages/generate/src"],
      "@strongly/data": ["packages/data/src"],
      "$test/*": ["test/*"]
    }
  }
}
